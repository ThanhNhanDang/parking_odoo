<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_template_tree_inherit2" model="ir.ui.view">
            <field name="name">product.template.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='default_code']" position="after">
                    <field name="barcode2"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_tree_inherit" model="ir.ui.view">
            <field name="name">product.template.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_tag_ids']" position="replace"></xpath>
                <xpath expr="//tree/field[@name='standard_price']" position="replace" />
                <xpath expr="//tree/field[@name='list_price']" position="replace" />
                <xpath expr="//tree/field[@name='qty_available']" position="replace" />
                <xpath expr="//tree/field[@name='virtual_available']" position="replace" />
                <xpath expr="//tree/field[@name='responsible_id']" position="replace" />

                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string"></attribute>
                </xpath>
                <xpath expr="//tree/field[@name='default_code']" position="attributes">
                    <attribute name="string">Mã thẻ</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='default_code']" position="after">
                    <field name="barcode"/>
                    <field name="categ_id"/>
                    <field name="contact_id" widget='many2one_avatar' />
                    <field name="so_khung" string="Số khung xe" />
                    <field name="move_history_id" />
                    <field name='so_loai' string="Mã kiểu loại" placeholder="SH 125I"></field>
                    <field name='so_may' string="Số máy" placeholder="JF08E-0028585"></field>
                </xpath>
            </field>
        </record>

        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />

            <field name="arch" type="xml">
                <xpath expr="//header" position="replace"></xpath>

                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">rfid_button</attribute>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="replace"></xpath>

                <xpath expr="//label[@for='name']" position="attributes">
                    <attribute name="string">BIỂN SỐ XE</attribute>
                </xpath>
                <xpath expr="//form/sheet/div[@class='oe_title']/h1/div/field[@name='name']" position="attributes">
                    <attribute name="placeholder">e.g. 54A12123</attribute>
                </xpath>
                <xpath expr="//form/sheet/div[@name='options']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//form/sheet/field[@name='image_1920']" position="replace">
                    <field name="image_1920" widget="image" class="oe_avatar image-zoom-hover" options="{'zoom': true}"/>
                </xpath>

                <xpath expr="//page[@name='invoicing']" position="replace"></xpath>
                <xpath expr="//page[@name='general_information']" position="replace"></xpath>
                <xpath expr="//page[@name='sales']" position="replace"></xpath>
                <xpath expr="//page[@name='purchase']" position="replace"></xpath>
                <xpath expr="//page[@name='variants']" position="replace"></xpath>
                <xpath expr="//page[@name='inventory']" position="replace"></xpath>

                <xpath expr="//form/sheet/notebook">
                    <page string="Thông tin chung" name="general_information">
                        <group>
                            <field name="active" invisible="1"/>
                            <group>
                                <field name="contact_id" widget="many2one_avatar" options="{'no_create':True, 'no_create_edit':True, 'no_open': True}" />
                            </group>
                        </group>

                        <field name="domain" invisible="1"/>
                        <field name="user_ids" domain="domain">
                            <kanban create="false" delete="false">
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                            <div class="o_kanban_record_bottom" style="display: flex; justify-content: space-between; align-items: flex-start;">
                                                <div class="o_kanban_record_bottom_right">
                                                    <field name="image_1920" widget="image" class="oe_avatar avatar-hover" />
                                                </div>
                                                <div class="o_kanban_record_bottom_left" style="width: 360px; height: 80px; display: flex; flex-direction: column;margin-left: 10px;">
                                                    <field name="name" string="Name : " style="margin-bottom: 5px; margin-top: 5px; font-weight:bold"></field>
                                                    <field name="ma_dinh_danh" string="ID : " style="margin-bottom: 5px;"></field>
                                                    <field name="ref" string="Mã thẻ : " style="margin-bottom: 5px;"></field>
                                                    <!-- <t t-if="record.user_ids">
                                                        <select class="form-control">
                                                            <t t-foreach="record.user_ids.data" t-as="user">
                                                                <option t-att-value="user.id" t-esc="user.display_name"/>
                                                            </t>
                                                        </select>
                                                    </t> -->
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>



                    </page>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='general_information']" position="after">
                    <page string="Hồ sơ xe" name="recordxe">
                        <div style="display:flex; align-items: flex-start;">
                            <sheet>
                                <group >
                                    <field name="image_1920_bien_so" widget="image" class="image-zoom-hover oe-avatar" options="{'zoom': true}" style="max-width: 200px; max-height: 200px; float: left; margin-right: 10px;" />
                                </group>
                                <group >
                                    <field name="image_1920" string="Ảnh trước xe" widget="image" class="image-zoom-hover " options="{'zoom': true}" style="max-width: 200px; max-height: 200px; float: left; margin-right: 10px;"/>
                                </group>
                                <group >
                                    <field name="image_1920_sau_xe" string="Ảnh sau xe" widget="image" class="image-zoom-hover" options="{'zoom': true}" style="max-width: 200px; max-height: 200px; float: left; margin-right: 10px;"/>
                                </group>
                            </sheet>
                            <sheet>
                                <group >
                                    <field name="image_1920_cavet_truoc" string="Mặt trước CV" widget="capture_image" class="image-zoom-hover " options="{'zoom': true}" style="max-width: 200px; max-height: 200px; float: left; margin-right: 10px;" />
                                </group>
                                <group >
                                    <field name="image_1920_cavet_sau" string="Mặt sau CV" widget="capture_image" class="image-zoom-hover " options="{'zoom': true}" style="max-width: 200px; max-height: 200px; float: left; margin-right: 10px;" />
                                </group>
                            </sheet>
                        </div>
                    </page>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='recordxe']" position="after">
                    <page name="inout_history" string="Lịch sử RA/VÀO">
                        <field name="move_history_ids">
                            <tree create="0" edit="0">
                                <field name="create_date"></field>
                                <field name="picking_code"></field>
                                <field name="contact_id"></field>
                                <field name="product_id" widget='image'></field>
                                <field name="bien_so_realtime" widget='image'></field>
                                <field name="location_id"></field>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='inout_history']" position="after">
                    <page name="manager_info" string="Thông tin quản lý">
                        <group>
                            <group>
                                <field name="default_code" />
                                <field name="barcode" string="Mật khẩu" password="true"></field>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//form/sheet/div[@class='oe_title']" position="after">
                    <field name='check_doi_the' invisible='1'/>
                    <div id="registered_2">
                        <widget name="web_ribbon" title="CHƯA CÓ THẺ" bg_color="bg-success" invisible="check_doi_the == 0" />
                    </div>
                    <separator string="Thông tin xe"/>

                    <div class="o_row" style="display: flex; align-items: flex-start;">
                        <div class="o_col-4" style="flex: 1;">
                            <group>
                                <field name='categ_id' widget="many2one" options="{'no_create':False, 'no_create_edit':False, 'no_open': True}" />
                                <label for="color_id" string="Màu xe"/>
                                <div class="o_row" style="flex: 1;">
                                    <div class="o_col-6" style="flex: 1;">
                                        <field name="color_id" />
                                    </div>
                                    <div class="o_col-6" style="flex: 1;">
                                        <field name="html_color" string="" widget="color" />
                                    </div>
                                </div>
                            </group>
                        </div>

                        <div class="o_col-4" style="flex: 1;">
                            <group>
                                <field name='so_khung' string="Số khung" placeholder="e.g. RUY19008811" />
                                <field name='so_may' string="Số máy" placeholder="JF08E-0028585" />
                                <field name='so_dang_ky' string="Số đăng ký (Mặt sau cà vẹt)" placeholder="Nhập số..." />
                            </group>
                        </div>

                        <div class="o_col-4" style="flex: 1; display: flex; align-items: center;">
                            <div style="width: 100%; margin-left: 20px;" class="image-zoom-hover ">
                                <field name="image_1920_cavet_sau" widget="image" nolabel="1" options="{'zoom': true}" style="max-width: 200px; max-height: 200px; margin-top: 0px;" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="product_template_kanban_inherit" model="ir.ui.view">
            <field name="name">product.template.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view" />
            <field name="arch" type="xml">
                <xpath expr="//strong[@class='o_kanban_record_title']" position="before">
                    Biển số:
                </xpath>
                <xpath expr="//t[@t-if='record.default_code.value']" position="replace"></xpath>
                <xpath expr="//div[@t-if='record.product_variant_count.value &gt; 1']" position="replace"></xpath>
                <xpath expr="//div[@name='product_lst_price']" position="replace">
                </xpath>
                <xpath expr="//div[@t-if='record.show_on_hand_qty_status_button.raw_value']" position="replace">
                </xpath>
                <xpath expr="//div[@class='o_kanban_record_top mb-0']" position="after">
                    <div class="mt-1">
                        <field name='contact_id' widget='many2one_avatar'></field>
                    </div>
                    <div class="mt-1">
                        <span class="o_stat_text">
                        In: 
                            <b>
                                <field name="nbr_moves_in" modifiers="{&quot;readonly&quot;: true}" />
                            </b>
                        </span>
                    </div>
                    <div class="mt-1">
                        <span class="o_stat_text">
                        Out: 
                            <b>
                                <field name="nbr_moves_out" modifiers="{&quot;readonly&quot;: true}" />
                            </b>
                        </span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
