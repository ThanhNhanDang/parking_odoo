<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_attribute_view_form" model="ir.ui.view">
            <field name="name">product.color.main.form</field>
            <field name="model">product.color.main</field>
            <field name="arch" type="xml">
                <form string="Product color">
                    <sheet style="border: 0px solid #ccc;
                    margin-left: 200px;margin-right: 200px; margin-bottom: 200px;">
                        <notebook>
                            <page string="TẠO MÀU MỚI" name="color_values">
                                <group>
                                    <field name="name" string="Tên màu" placeholder="Nhập tên màu..." style="width: 200px; height: 30px;"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="html_color" widget="color" string="Chọn màu" help="Chọn màu của bạn. Trỏ chuột tới vị trí màu mong muốn, hoặc nhập mã màu ở ô bên dưới."></field>
                                    </group>
                                    <group>
                                        <field name="html_color" string="Mã màu" placeholder="Nhập mã màu ..." help="Nhập mã màu của bạn. Đảm bảo rằng nhập đúng định dạng mã màu ('#RRGGBB') ví dụ: #ffffff"/>
                                    </group>
                                </group>
                                <group>
                                    
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_color_main_tree_view" model="ir.ui.view">
            <field name="name">product.color.main.tree</field>
            <field name="model">product.color.main</field>
            <field name="arch" type="xml">
                <tree string="Product Color">
                    <field name="name"/>
                    <field name="html_color" string="Mã màu"/>
                    <field name="html_color" widget="color" string="Chọn màu"/>
                </tree>
            </field>
        </record>


    </data>
</odoo>








